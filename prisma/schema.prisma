datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model TaxPositionEntry {
  id               Int      @id @default(autoincrement())
  date             DateTime
  taxPosition      Int
  taxPositionDelta Int // The change in tax position due to event that created this entry
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  eventId          String
  eventType        String

  @@index([date])
}

model SalesEvent {
  id             String      @id @default(uuid())
  eventType      String      @default("SALES")
  date           DateTime
  invoiceId      String      @unique
  totalTaxImpact Int
  totalCost      Int
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  salesItems     SalesItem[]

  @@index([invoiceId])
  @@index([date])
}

model SalesItem {
  id           String     @id @default(uuid())
  itemId       String
  cost         Int
  date         DateTime
  taxRate      Float
  taxImpact    Int
  salesEvent   SalesEvent @relation(fields: [salesEventId], references: [id])
  salesEventId String

  @@index([itemId])
  @@index([salesEventId])
}
